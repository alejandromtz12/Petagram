<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="mx.alemtz.petagram.Contacto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin_contacto"
    android:paddingLeft="@dimen/activity_horizontal_margin_contacto"
    android:paddingRight="@dimen/activity_horizontal_margin_contacto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/contacto">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/txinombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/nombre"
                android:singleLine="true"
                android:textColorHighlight="@color/colorBlack"/>
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/contacto">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/txiemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:hint="@string/email"
                android:textColorHint="@color/colorBlack" />
        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/contacto">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/tximensaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/mensaje"
                android:textColorHint="@color/colorBlack"/>
        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/btenviar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enviar"
            android:theme="@style/DisenoBotones"
            android:onClick="EnviarEmail"/>

    </LinearLayout>
</ScrollView>







